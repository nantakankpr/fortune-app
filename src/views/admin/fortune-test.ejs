                padding: 10px 16px;
                font-size: 14px;
            }
        }

        /* Mobile Responsive */
        @media (max-width: 767px) {
            .sidebar {
                width: 280px;
                transform: translateX(-100%);
            }

            .sidebar.show {
                transform: translateX(0);
            }

            .main-content {
                margin-left: 0;
            }

            .topbar {
                padding: 12px 16px;
            }

            .page-content {
                padding: 16px;
            }

            .broadcast-section {
                padding: 16px;
            }

            .fortune-form {
                flex-direction: column;
            }

            .fortune-input {
                min-width: 100%;
            }

            .users-table {
                min-width: 600px;
                font-size: 13px;
            }

            .users-table th,
            .users-table td {
                padding: 12px 8px;
            }

            .user-name {
                display: none;
            }

            .admin-actions {
                padding: 12px 16px;
            }

            .add-admin-btn {
                padding: 8px 16px;
                font-size: 13px;
            }

            .modal-content {
                width: 95%;
                margin: 20px;
            }

            .modal-header,
            .modal-body,
            .modal-footer {
                padding: 16px;
            }
        }
    </style>
</head>

