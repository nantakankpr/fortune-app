                        e.preventDefault();
                        goToPage(1);
                    } else if (e.key === 'End') {
                        e.preventDefault();
                        goToPage(totalPages);
                    }
                }
            });

            // Close modals when clicking outside
            [detailsModal, confirmModal].forEach(modal => {
                modal.addEventListener('click', function(e) {
                    if (e.target === modal) {
                        closeModal(modal.id);
                    }
                });
            });
        }

